

<%= form_tag '/signin' do %>
<%= flash[:notice] %>

<div class="form-group">
  <%= label_tag :name, nil, class: "form-label" %>
  <%= text_field_tag 'user[name]', nil, class: "form-control" %>
</div>

<div class="form-group">
  <%= label_tag :password, nil,  class: "form-label" %>
  <%= password_field_tag 'user[password]', nil, class: "form-control" %>
</div>

  <%= submit_tag "Sign In"%>


<% end %>
